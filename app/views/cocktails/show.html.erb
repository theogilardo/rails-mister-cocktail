<h1>Your Cocktail</h1>
<p><%= @cocktail.name %></p>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> <%= dose.description %></li>
  <% end %>
  <ul>
<br/>
      <%= link_to "Go Back", cocktails_path %> </br>
      <%= link_to "Add dose", new_cocktail_dose_path(@cocktail)  %> </br>
      <%= link_to "Delete", cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
