<div id="index-page">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80);">
    <div class="ml-5">
      <h1>Learn more about <strong>cocktail</strong>!</h1>
      <p>Every recipe here</p>
      <p class="btn btn-secondary"> <%= link_to "Add cocktail", new_cocktail_path %> </p>
    </div>
  </div>

  <br/>


  <h1 class="text-center mt-2 text-dark">Cocktails</h1>
  <div class="cards text-center ml-5 mr-5">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail_card">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
     <% if cocktail.photo.attached? %>
        <%= cl_image_tag(cocktail.photo.key, width: 300, height: 300, crop: :fill, class: "cocktail_image") %>
     <% else %>
        <% background_url = 'https://images.pexels.com/photos/2789328/pexels-photo-2789328.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940' %>
       <%= image_tag background_url, class: "cocktail_image"  %>
     <% end %>
   </div>
   <% end %>
 </div>
</div>

<br/>
</div>

